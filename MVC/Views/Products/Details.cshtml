                } else if (favOrNot == 'false') {
                    $("#isProductFavorited").text('true');

                    var x = parseInt($("#totalFavorites").text());
                    $("#totalFavorites").text(x + 1);
                }
            });
            request.fail(function (jqXHR, textStatus, errorThrown) {
