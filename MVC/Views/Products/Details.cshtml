                                                    "<span> 1234</span>" +
                                                    "<a href=\"#\" style=\"margin-left:15px;\"><span class=\"glyphicon glyphicon-comment\"></span> Reply</a>" +
                                                "</div>" +
                                            "</div>" +
                                        "</div>" +
                                    "</div>"
                                );
                                $("#cmt" + cmtId).css("background-color", "");
                                $("#cmt" + cmtId).attr("href", response.nextResultSetUrl);
                            })
