@model CoolBuyer.Client.Common.ClientModels.Products.ProductDetailsViewModel

@{
    ViewBag.Title = Model.Product.Title;
}

<div id="mainMsgPanel">
    
</div>

@if (Model.Product.ExpirationDate < DateTime.UtcNow)
{
